<meta name="viewport" content="width=device-width, initial-scale=1.0">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
           Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <div class="login-form">
        <h1 class="login-title">Connexion</h1>
        <div class="form-input">
            <input type="email" value="{{ last_username }}" placeholder="Email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="form-input">
            <input type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="form-btn" type="submit">
            Se connecter
        </button>
    </div>
</form>

<style>
body{
    background-color: grey;
}
.login-title{
  text-align: center;
  color: #FF5100;
  font-family: Arial;
}
  
.login-form{
  width: 350px;
  padding: 40px 30px;
  background-color: white;
  border-radius: 4px;
  margin: auto;
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
  
.form-input{
  position: relative;
  margin-bottom: 15px;
  font-family: arial;
}
  
.form-control{
  width: 100%;
  height: 30px;
  padding: 5px 7px 5px 15px;
  background-color: white;
  color: grey;
  border: 2px solid #ddd;
  border-radius: 4px;
}
  
.form-btn{
  margin-top: 15px;
  float: right;
  background-color: #FF5100;
  border-radius: 20px;
  border: none;
  padding: 10px;
  color: white;
}
@media (max-width: 600px) {

    .login-title{
    font-size: 30px;
    }
    
    .login-form{
    width: 80%;
    height:40%;
    padding: 0px;
    }
    
    .form-input{
    position: relative;
    margin-bottom: 15px;
    font-family: arial;
    font-size: 55px;
    }
    
    .form-control{
    width: 90%;
    height: 40px;
    padding: 5px 7px 5px 15px;
    background-color: white;
    color: grey;
    border: 2px solid #ddd;
    border-radius: 4px;
    font-size:18px;
    margin-left:15px;
    }
    
    .form-btn{
    margin-top: 0px;
    padding: 7px;
    margin-right: 15px;
    }
}
</style>
